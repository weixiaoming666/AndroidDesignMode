<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.androiddesignmode.singleton.SingletonAty">
<TextView
    android:background="@color/colorPrimary"
    android:padding="20dp"
    android:id="@+id/tv_layoutInflater"
    android:layout_width="wrap_content"
    android:onClick="layoutInflater"
    android:layout_height="wrap_content"
    android:text="系统中的单例layoutInflater"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:background="@color/colorPrimaryDark"
        android:gravity="bottom|center"
        android:id="@+id/tv_enum"
        android:layout_width="274dp"
        android:onClick="jumpenum"
        android:layout_height="44dp"
        android:text="枚举单例"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_layoutInflater" />
    <TextView
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:id="@+id/tv_lazy"
        android:layout_width="378dp"
        android:onClick="jumplazy"
        android:layout_height="29dp"
        android:text="懒汉模式"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_enum" />
    <TextView
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:id="@+id/tv_static"
        android:layout_width="142dp"
        android:onClick="jumstatic"
        android:layout_height="71dp"
        android:text="懒汉模式"
        android:layout_marginTop="94dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_enum" />
    <TextView
        android:background="@color/yellow"
        android:gravity="center"
        android:id="@+id/tv_description"
        android:layout_width="276dp"
        android:onClick="jumdescription"
        android:layout_height="68dp"
        android:text="单例模式概述"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_enum" />


    <TextView
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:id="@+id/tv_manager"
        android:layout_width="105dp"
        android:onClick="jummapManager"
        android:layout_height="32dp"
        android:text="容器模式"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_static"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.773"
        app:layout_constraintHorizontal_bias="0.501" />
</android.support.constraint.ConstraintLayout>

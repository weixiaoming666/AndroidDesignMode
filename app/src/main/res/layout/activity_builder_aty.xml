<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_tv_main"
    tools:context="com.example.administrator.androiddesignmode.builder.BuilderAty">

    <TextView
        android:background="@color/black"
        android:gravity="center"
        android:id="@+id/tv_description"
        android:alpha="0.6"
        android:onClick="jumdescription"
        android:textStyle="bold"
        android:layout_width="288dp"
        android:layout_height="55dp"
        android:textColor="@color/white"
        android:text="书上的定义和使用场景"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:background="@color/black"
        android:gravity="center"
        android:id="@+id/tv_easy"
        android:alpha="0.6"
        android:onClick="jumeasy"
        android:textStyle="bold"
        android:layout_width="288dp"
        android:layout_height="55dp"
        android:textColor="@color/white"
        android:text="简单的demo"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        app:layout_constraintHorizontal_bias="0.387" />
    <TextView
        android:background="@color/black"
        android:gravity="center"
        android:id="@+id/tv_system"
        android:alpha="0.6"
        android:onClick="jumsystem"
        android:textStyle="bold"
        android:layout_width="288dp"
        android:layout_height="55dp"
        android:textColor="@color/white"
        android:text="系统自带的Builder AlterDialog"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="79dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        app:layout_constraintHorizontal_bias="0.387" />
</android.support.constraint.ConstraintLayout>
